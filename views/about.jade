block vars
	- var footer = true

block scripts
	script(type='text/javascript').
		$(document).ready(function () {
			$('#gabe img').hover(function () {
				$(this).attr('src', '/images/gabe_glitched.png');
			}, function () {
				$(this).attr('src', '/images/gabe.png');
			});

			$('#aidon img').hover(function () {
				$(this).attr('src', '/images/aidon_glitched.png');
			}, function () {
				$(this).attr('src', '/images/aidon.png');
			});

			$('#david img').hover(function () {
				$(this).attr('src', '/images/david_glitched.png');
			}, function () {
				$(this).attr('src', '/images/david.png');
			});
		});

